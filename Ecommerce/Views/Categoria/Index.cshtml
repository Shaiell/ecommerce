@model IEnumerable<Domain.Categoria>

@{
    ViewData["Title"] = "Categoria";
}


<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar Categoria</a>
</p>
<table style="margin-top:10px;margin-bottom:10px" class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
        </tr >
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
          
        </tr>
}
    </tbody>
</table>
